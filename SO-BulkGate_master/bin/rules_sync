#!/bin/sh


host=`hostname`
src=/data/bulk_gate
dst=$HOME/SO-BulkGate/data/install
CP=

$CP cp -r $src/gates.yml $src/rules $dst

for h in 1 2 3; do
    remote=bulk-gate-$h

    if [ "$remote" != "$host" ]; then
        echo copy to $remote
        $CP scp -r $src/gates.yml $src/rules ${remote}.aqq.me:$dst
    fi

done;
